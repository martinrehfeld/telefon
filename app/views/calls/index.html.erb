<div id="new-call-form">
  <% form_for @call do |f| -%>
    <div class="form-field">
      <%= f.label :origin %>
      <%= f.select :origin, @call.origins %>
    </div>
    <div class="form-field">
      <%= f.label :destination %>
      <%= f.text_field :destination %>
    </div>
    <br />
    <%= f.submit _('Connect') %>
  <% end -%>
</div>

<%= error_messages_for :call %>